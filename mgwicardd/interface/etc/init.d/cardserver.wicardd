#!/bin/sh

case "$1" in
start)
	/usr/local/tuxbox/config/wicardd/wicardd.conf.gen.sh > /usr/local/tuxbox/config/wicardd/wicardd.conf
	sleep 1
	/usr/local/bin/wicardd -c /usr/local/tuxbox/config/wicardd/wicardd.conf
	;;
stop)
	exec start-stop-daemon -K -R 2 -x /usr/local/bin/wicardd
	;;
restart|reload)
	$0 stop
	sleep 10
	$0 start
	;;
version)
	echo "1.16"
	;;
info)
	echo "wicard 1.16"
	;;
*)
	echo "Usage: $0 start|stop|restart"
	exit 1
	;;
esac
exit 0
